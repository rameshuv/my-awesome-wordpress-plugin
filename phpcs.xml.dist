<?xml version="1.0"?>
<ruleset name="BHG Coding Standard">
  <description>WordPress + PHPCompatibility + VariableAnalysis for this plugin.</description>

  <!-- Scope & performance -->
  <arg name="basepath" value="."/>
  <arg name="extensions" value="php"/>
  <arg name="cache" value=".phpcs-cache"/>
  <arg name="parallel" value="4"/>

  <!-- What to scan -->
  <file>./</file>

  <!-- What not to scan -->
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern>tests/fixtures/*</exclude-pattern>
  <exclude-pattern>*/.git/*</exclude-pattern>

  <!-- WordPress full ruleset (includes Core, Docs, Extra) -->
  <rule ref="WordPress"/>

  <!-- PHP compatibility for WordPress projects -->
  <rule ref="PHPCompatibilityWP"/>
  <!-- Adjust if you support a different PHP range -->
  <config name="testVersion" value="7.4-8.3"/>

  <!-- Variable usage analysis -->
  <rule ref="VariableAnalysis"/>

  <!-- Optional: fail build only on errors (warnings won't fail CI)
       Uncomment the next line if your CI should pass with warnings.
  -->
  <!-- <arg name="runtime-set" value="ignore_warnings_on_exit 1"/> -->
</ruleset>
